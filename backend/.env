# Voice Authentication System - Environment Configuration

# Application Environment
DEBUG=True
PROJECT_NAME="Voice Authentication System"
PROJECT_VERSION="1.0.0"
LOG_LEVEL="INFO"

# Security
SECRET_KEY=voice-auth-secret-key-change-in-production-minimum-32-characters-long-12345
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Database - Using SQLite for easy demo
DATABASE_URL=sqlite:///./voiceauth.db

# Voice Processing Settings
SAMPLE_RATE=16000
AUDIO_DURATION=3.0
MIN_AUDIO_DURATION=1.0
MAX_AUDIO_DURATION=10.0

# Security Thresholds
VERIFICATION_THRESHOLD=0.85
LIVENESS_THRESHOLD=0.7

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_AUDIO_FORMATS=["wav", "mp3", "m4a", "ogg"]

# CORS Origins
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:5173", "http://localhost:5174", "https://localhost:3000", "https://localhost:8080"]
